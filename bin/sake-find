#!/bin/bash

SCRIPT_DIR="$COMPOSER_RUNTIME_BIN_DIR"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/sake-methods

help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice "   -f, --find          string you are looking for"
    echonice " "
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   e.g. sake-find app/src -f 'piece of code'";
    echoline;
    echonice " "
    echonice " "
    exit;
}

dir='./'

while (( $# )); do
  case $1 in
    -f|--find)               find=$2;shift ;;
    -*)                      printf 'Unknown option: %q\n\n' "$1";
                             help_and_exit 1 ;;
    *)                       dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Running grep search";
echoline;
echonice "   Directory of script:           $SCRIPT_DIR";
echonice "   Directory to analyse:          $WORKING_DIR/$dir";
echoline;
echonice "   Find string (-f|--find):       $find";
echonice " "

echoline
echonice "   Changing directory to $dir "
echoline
cd $dir
echonice " "

# dev-build
grep -rnw ./ -e "'$find'"

echoend;
