#!/usr/bin/env bash

############################################ BASICS
SCRIPT_DIR="${COMPOSER_RUNTIME_BIN_DIR:?COMPOSER_RUNTIME_BIN_DIR not set}"
WORKING_DIR=$(pwd)
source "$SCRIPT_DIR/sake-self-methods"

############################################ DIR
dir='./'

############################################ SETTINGS
more="no"
help='no'
while (($#)); do
    case $1 in
    -m | --more)
        more=$2
        shift
        ;;
    *)
        if sake_handle_help_flag "$1"; then
            shift
            continue
        fi
        dir=$1
        ;;
    esac
    shift
done

help_and_exit() {

    ECHOHEAD "self help"
    echonice "Directory of script:           $SCRIPT_DIR"
    echonice "Directory to analyse:          $WORKING_DIR/$dir"

    ECHOHEAD "Current settings:"
    echonice "More (-m|--more):              $more"

    ECHOHEAD "Available settings:"
    echonice "-m, --more                     show MORE help information"

    ECHOHEAD "Example usage:"
    echonice "e.g. sake-help -m yes"

    echofunctions
    exit
}

############################################ HELP ONLY
sake_check_help_and_exit

############################################ CODE

if [ -d "$WORKING_DIR" ]; then
    cd $WORKING_DIR
else
    echobad "Could not change directory to $WORKING_DIR"
    help_and_exit
fi

echolistoffunctions

echoend
