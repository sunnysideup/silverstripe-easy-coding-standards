#!/bin/bash

SCRIPT_DIR="$COMPOSER_RUNTIME_BIN_DIR"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/sake-methods
# : ${ecsConfig:=$SCRIPT_DIR/../sunnysideup/easy-coding-standards/ecs.yml}



help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice "   -d, --dry-run                  is test only (default NO!)"
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   sake-remove-stale-branches ./";
    echoline;
    echonice " "
    echonice " "
    exit;
}

dryRun='no'
dir='./'
while (( $# )); do
  case $1 in
    -d|--dry-run)      dryRun=$2;shift ;;
    -*)                printf 'Unknown option: %q\n\n' "$1";
                       help_and_exit 1 ;;
    *)                 dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Remove Stale Branches";
echoline;
echonice "   Directory of script:           $SCRIPT_DIR";
echonice "   Directory to analyse:          $WORKING_DIR/$dir";
echonice "   Excluded are:                  master|develop|dev|production|feature/pre-develop";
echoline;
echonice " "
echonice " "

echonice "   # going to right directory: $WORKING_DIR/$dir"
if [ -d "$WORKING_DIR/$dir" ]; then
    cd $WORKING_DIR/$dir
fi
if [[ "$dryRun" == "no" ]]; then
    git branch --merged | egrep -v "(^\*|master|develop|dev|production|feature/pre-develop)" | xargs git branch -d
else
    git branch --merged | egrep -v "(^\*|master|develop|dev|production|feature/pre-develop)"
fi

echoend;
