#!/bin/bash

SCRIPT_DIR="$COMPOSER_RUNTIME_BIN_DIR"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/sake-methods
# : ${stanConfig:=$SCRIPT_DIR/../sunnysideup/easy-coding-standards/phpstan.neon}

if [ "$1" != "" ]; then
    dir=$1;
else
    dir='themes/client'
fi

help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice "   none"
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   sake-npm-build themes/client";
    echoline;
    echonice " "
    echonice " "
    exit;
}

while (( $# )); do
  case $1 in
    -*)                printf 'Unknown option: %q\n\n' "$1";
                       help_and_exit 1 ;;
    *)                 dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Running NPM build";
echoline;
echonice "   Directory of script:              $SCRIPT_DIR";
echonice "   Directory to install:             $WORKING_DIR/$dir";
echoline;
echonice " "
echonice " "

cd themes/sswebpack_engine_only/
npm run build --theme_dir=$dir


echoend;
