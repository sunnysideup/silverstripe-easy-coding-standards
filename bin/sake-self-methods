#!/bin/bash

echoplain() {
    echo -e " $1"
}

echonice() {
    echo -e " \033[0;33m$1 \033[0m"
}

echogood() {
    echo -e " \033[0;32m$1 \033[0m"
}

echobad() {
    echo -e "\033[1;32;41m ---------------------------------------- \033[0m"
    echo -e " \033[1;32;41m ERROR: $1 \033[0m"
    echo -e "\033[1;32;41m ---------------------------------------- \033[0m"
}

echoline() {
    echonice '----------------------------------------'
}

echohead() {
    string=$1

    if [[ $string != \#* ]]; then
        string="#$string"
    fi
    echo ""
    echo ""
    echo ""
    echoline
    echo -e "\033[95m $string\033[0m"
    echoline
}

echoend() {
    echo ""
    echoline
    echogood "COMPLETED"
    echoline

    [ $(date +%1N) == 1 ] && $SCRIPT_DIR/sake-self-update
}

echofunctions() {
    echohead 'Available Functions? Run ...'
    echogood "sake-help"
    echoline
}

echolistoffunctions() {
    echohead 'List of Available Functions'
    for entry in $(ls $SCRIPT_DIR); do
        echonice " -  $entry"
    done
    echonice "To show the options for a specific command, run:"
    echo "[command] -h"
    echonice "e.g. sake-lint-all -h"
}

echofunctions
