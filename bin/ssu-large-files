#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/ssu-methods
# : ${ecsConfig:=$SCRIPT_DIR/../sunnysideup/easy-coding-standards/ecs.yml}



help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice "  "
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   ssu-large-files ./";
    echoline;
    echonice " "
    echonice " "
    exit;
}

also=''
dryRun='no'
dir='app/src'
while (( $# )); do
  case $1 in
    -*)                printf 'Unknown option: %q\n\n' "$1";
                       help_and_exit 1 ;;
    *)                 dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Find Large Files";
echoline;
echonice "   Directory of script:           $SCRIPT_DIR";
echonice "   Directory to analyse:          $WORKING_DIR/$dir";
echoline;
echonice " "
echonice " "

find $WORKING_DIR/$dir -xdev -type f -size +100M -exec du -sh {} ';' | sort -rh | head -n50

echoend;
