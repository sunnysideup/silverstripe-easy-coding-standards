#!/bin/bash


SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/ssu-methods

help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice "  NONE"
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   ssu-dev-build .";
    echoline;
    echonice " "
    echonice " "
    exit;
}

dir='./'

while (( $# )); do
  case $1 in
    -*)                      printf 'Unknown option: %q\n\n' "$1";
                             help_and_exit 1 ;;
    *)                       dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Running Dev/Build";
echoline;
echonice "   Directory of script:           $SCRIPT_DIR";
echonice "   Directory to analyse:          $WORKING_DIR/$dir";
echoline;
echonice " "
echonice " "

echoline
echonice "   Changing directory to $dir "
echoline
cd $dir
echonice " "

sudo ls
composer install
composer vendor-expose
composer dumpautoload
sudo chown whoami:www-data . -R
sudo chown www-data public/assets -R
sudo chown www-data .graphql/ public/assets/ public/admin.types.graphql -R
sudo -u www-data vendor/bin/sake dev/build flush=all

echoend;
