#!/bin/bash

############################################ BASICS
SCRIPT_DIR="$COMPOSER_RUNTIME_BIN_DIR"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/sake-self-methods
# : ${ecsConfig:=$SCRIPT_DIR/../sunnysideup/easy-coding-standards/ecs.yml}

############################################ DIR
dir='./'
package=''

############################################ SETTINGS
branch='*@dev'
help='no'
while (( $# )); do
  case $1 in
    -b|--branch)       branch=$2;shift ;;
    -h|--help)         help='yes';shift ;;
    -*)                printf 'Unknown option: %q\n\n' "$1";
                       help='yes' ;;
    *)                 package=$1;;
  esac
  shift
done

help_and_exit() {

    echohead "Composer Require";
    echonice "Directory of script:           $SCRIPT_DIR";
    echonice "Directory to analyse:          $WORKING_DIR/$dir";

    echohead "Current settings:";
    echonice "Package:                       $package";
    echonice "Branch:                        $branch";

    echohead "Available settings:";
    echonice "-b, --branch                   branch, default: *@dev"
    echonice "-h, --help                     show help information"

    echohead "Example usage:"
    echonice "sake-composer-require silverstripe/cms -b 4.x-dev";

    echofunctions
    exit;
}

############################################ HELP ONLY
if [[ "$help" == "yes" ]]; then
    help_and_exit
fi

############################################ CODE
if [[ "$package" == "" ]]; then
    echobad "please provide package name"
    help_and_exit
fi

if [ -d "$WORKING_DIR/$dir" ]; then
    cd $WORKING_DIR/$dir
else
    echonice "Could not change directory to $WORKING_DIR/$dir";
    help_and_exit;
fi

echohead "Consider using";
echonice "config --global  \"preferred-install.myvendorname/*\" source to set --prefer-source";
echonice "to enable editing your own packages";

echohead "running: composer require $package:$branch"

composer require $package:$branch

echoend;
