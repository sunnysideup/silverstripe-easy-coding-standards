#!/bin/bash
: ${dir:=app/src} # dir will take on the value "app/src" if not overridden
: ${configFile:=app/_config.php} # dir will take on the value "app/src" if not overridden
cp vendor/sunnysideup/easy-coding-standards/ecs.yml ./
vendor/bin/ecs check $dir --fix
vendor/bin/ecs check $configFile --fix
