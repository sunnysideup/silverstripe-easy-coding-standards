#!/bin/bash



SCRIPT_DIR="$COMPOSER_RUNTIME_BIN_DIR"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/sake-methods



help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice "  NONE"
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   sake-dev-build .";
    echoline;
    echonice " "
    echonice " "
    exit;
}

dir='./'

while (( $# )); do
  case $1 in
    -*)                      printf 'Unknown option: %q\n\n' "$1";
                             help_and_exit 1 ;;
    *)                       dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Running Dev/Build";
echoline;
echonice "   Directory of script:           $SCRIPT_DIR";
echonice "   Directory to analyse:          $WORKING_DIR/$dir";
echoline;
echonice " "
echonice " "

echoline
echonice "   Changing directory to $dir "
echoline
cd $dir
echonice " "

# create necessary folders
mkdir -p ./public 
mkdir -p ./public/assets 
mkdir -p ./.graphql 

# composer install
composer install --prefer-source

# we keep all the sudos together...
# cleanup ownership
sudo chown $(whoami):www-data . -R
sudo chown www-data public/assets -R
sudo chown www-data .graphql/ public/assets/ public/admin.types.graphql -R
# dev-build
sudo -u www-data vendor/bin/sake dev/build flush=all

echoend;
