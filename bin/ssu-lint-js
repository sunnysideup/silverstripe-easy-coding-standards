#!/bin/bash


SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/ssu-methods

if [ "$1" != "" ]; then
    dir=$1;
else
    dir='app/client/src'
fi

while getopts a: flag
do
    case "${flag}" in
        a) dir=${OPTARG};;
    esac
done

help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice "   --NONE--";
    echonice " "
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   ssu-lint-js .";
    echonice "   ssu-lint-js foo/bar";
    echoline;
    echonice " "
    echonice " "
    exit;
}

while (( $# )); do
  case $1 in
    -*)               printf 'Unknown option: %q\n\n' "$1";
                      help_and_exit 1 ;;
    *)                dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Running JS Standard";
echoline;
echonice " "
echonice " "
echonice "   Make sure you have intalled and updated:";
echonice " ";
echonice "   sudo npm install standard --global'";
echonice " "
echonice " "
echoline;
echonice "   files to analyse: $WORKING_DIR/$dir/*.js";
echoline;
echonice "   Example usage:"
echonice "   e.g. ssu-lint-js app/client/javascript";
echonice "   e.g. ssu-lint-js .";
echoline;
echonice " "
echonice " "


standard --fix $dir/*.js

echoend;
