#!/bin/bash


SCRIPT_DIR="$COMPOSER_RUNTIME_BIN_DIR"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/sake-methods

help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice " "
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   e.g. sake-add-site ./  # do this in a place where you would like the new site to be"
    echoline;
    echonice " "
    echonice " "
    exit;
}

dir='./'

while (( $# )); do
  case $1 in
    -*)                      printf 'Unknown option: %q\n\n' "$1";
                             help_and_exit 1 ;;
    *)                       dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Running add-site";
echoline;
echonice "   Directory of script:           $SCRIPT_DIR";
echonice "   Directory to analyse:          $WORKING_DIR/$dir";
echoline;
echonice " "
echonice " "

echoline
echonice "   Changing directory to $dir "
echoline
cd $dir
echonice " "

# dev-build
echo "TO BE COMPLETED"

echoend;
