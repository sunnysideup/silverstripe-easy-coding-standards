#!/bin/bash
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
WORKING_DIR=$(pwd)


if [ "$1" != "" ]; then
    dir=$1;
else

fi

while getopts a: flag
do
    case "${flag}" in
        a) dir=${OPTARG};;
    esac
done

help_and_exit() {
    echo "---------------------------------";
    echo "  Available settings:";
    echo "   NONE";
    echo "---------------------------------";
    echo "  Example usage:"
    echo "  sslint-js foo/bar";
    echo "---------------------------------";
    echo ""
    echo ""
    exit;
}

dir='app/client/javascript'
while (( $# )); do
  case $1 in
    -*)               printf 'Unknown option: %q\n\n' "$1";
                      help_and_exit 1 ;;
    *) dir=$1;;
  esac
  shift
done

echo ""
echo ""
echo "---------------------------------";
echo "  Running JS Standard";
echo "---------------------------------";
echo "  Please run 'npm install standard --global' first!";
echo "---------------------------------";
echo "  directory to analyse: $WORKING_DIR/$dir";
echo "---------------------------------";
echo "  Example usage:"
echo "  e.g. sslint-js app/client/javascript";
echo "---------------------------------";
echo ""
echo ""
standard --fix $WORKING_DIR/$dir
