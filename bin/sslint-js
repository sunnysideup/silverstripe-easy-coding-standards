#!/bin/bash
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
WORKING_DIR=$(pwd)


if [ "$1" != "" ]; then
    dir=$1;
else
    dir='app/client/javascript'
fi

while getopts a: flag
do
    case "${flag}" in
        a) dir=${OPTARG};;
    esac
done
echo ""
echo ""
echo "---------------------------------";
echo "  Running JS Standard";
echo "---------------------------------";
echo "  Please run 'npm install standard --global' first!";
echo "---------------------------------";
echo "  directory of script: $SCRIPT_DIR/";
echo "  directory to analyse: $WORKING_DIR/$dir";
echo "---------------------------------";
echo "  Example usage:"
echo "  e.g. sslint-js app/client/javascript";
echo "---------------------------------";
echo ""
echo ""
standard --fix $WORKING_DIR/$dir
