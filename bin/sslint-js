#!/bin/bash
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
WORKING_DIR=$(pwd)


if [ "$1" != "" ]; then
    dir=$1;
else
    dir='app/client/src'
fi

while getopts a: flag
do
    case "${flag}" in
        a) dir=${OPTARG};;
    esac
done

help_and_exit() {
    echo "---------------------------------";
    echo "  Available settings:";
    echo "   NONE";
    echo "---------------------------------";
    echo "  Example usage:"
    echo "  sslint-js .";
    echo "  sslint-js foo/bar";
    echo "---------------------------------";
    echo ""
    echo ""
    exit;
}

while (( $# )); do
  case $1 in
    -*)               printf 'Unknown option: %q\n\n' "$1";
                      help_and_exit 1 ;;
    *) dir=$1;;
  esac
  shift
done

echo ""
echo ""
echo "---------------------------------";
echo "  Running JS Standard";
echo "---------------------------------";
echo "  Make sure you have run 'npm install standard --global'";
echo "---------------------------------";
echo "  files to analyse: $WORKING_DIR/$dir/*.js";
echo "---------------------------------";
echo "  Example usage:"
echo "  e.g. sslint-js app/client/javascript";
echo "  e.g. sslint-js .";
echo "---------------------------------";
echo ""
echo ""
standard --fix $dir/*.js
