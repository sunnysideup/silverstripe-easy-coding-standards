#!/bin/bash

SCRIPT_DIR="$COMPOSER_RUNTIME_BIN_DIR"
WORKING_DIR=$(pwd)
source $SCRIPT_DIR/sake-methods
# : ${ecsConfig:=$SCRIPT_DIR/../sunnysideup/easy-coding-standards/ecs.yml}



help_and_exit() {
    echoline;
    echonice "   Available settings:";
    echoline;
    echonice "   -a, --also                     also lint - e.g. app/_config.php OR app OR mysite";
    echonice "   -d, --dry-run                  is test only (default NO!)"
    echonice "  "
    echoline;
    echonice "   Example usage:"
    echoline;
    echonice "   sake-remove-origs app -a other/dir -d yes";
    echoline;
    echonice " "
    echonice " "
    exit;
}

also=''
dryRun='no'
dir='app/src'
while (( $# )); do
  case $1 in
    -a|--also)         also=$2;shift ;;
    -d|--dry-run)      dryRun=$2;shift ;;
    -*)                printf 'Unknown option: %q\n\n' "$1";
                       help_and_exit 1 ;;
    *)                 dir=$1;;
  esac
  shift
done

echonice " "
echonice " "
echoline;
echonice "   Running Remove Origs";
echoline;
echonice "   Directory of script:           $SCRIPT_DIR";
echonice "   Directory to analyse:          $WORKING_DIR/$dir";
echoline;
echonice "   Also check (-a):               $WORKING_DIR/$also";
echonice "   Is test only (-d):             $dryRun";
echoline;
echonice " "
echonice " "

if test -f "$WORKING_DIR/$also"; then
    $SCRIPT_DIR/sake-remove-origs -a 'nothing-here-hopefully' -d $dryRun
fi

find $WORKING_DIR/$dir -name "*.orig"

if [[ "$dryRun" == "no" ]]; then
    find $WORKING_DIR/$dir -name "*.orig" -exec rm "{}" \;
fi

echoend;
