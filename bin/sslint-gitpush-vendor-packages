#!/bin/bash
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
WORKING_DIR=$(pwd)

if [ "$1" != "" ]; then
    dir=$1;
else
    dir='vendor'
fi

help_and_exit() {
    echo "---------------------------------";
    echo "  Available settings:";
    echo "---------------------------------";
    echo "  -m, --message                  message - e.g. Lint";
    echo "  -c, --commit-and-push          commit and push also? enter yes to execute";
    echo "  -n, --new-tag                  create new tag";
    echo ""
    echo "---------------------------------";
    echo "  Example usage:"
    echo "---------------------------------";
    echo "  sslint-gitpush-vendor-packages  -m 'PATCH: lint'   -c yes     vendor/my-vendor-name";
    echo "---------------------------------";
    echo ""
    echo ""
    exit;
}

commitAndPush='no'
message='PATCH: automated linter'
newTag='no'
while (( $# )); do
  case $1 in
    -m|--message)          message=$2;shift ;;
    -c|--commit-and-push)  commitAndPush=$2;shift ;;
    -n|--newTag)           newTag=$2;shift ;;
    -*)                    printf 'Unknown option: %q\n\n' "$1";
                           help_and_exit 1 ;;
    *)                     dir=$1;;
  esac
  shift
done

echo ""
echo ""
echo "---------------------------------";
echo "  Checking Vendor Packages for Changes";
echo "---------------------------------";
echo "  Directory of script:           $SCRIPT_DIR";
echo "  Directory to analyse:          $WORKING_DIR/$dir";
echo "---------------------------------";
echo "  Message:                       $message";
echo "  Also commit?:                  $commitAndPush";
echo "  New tag?:                      $newTag";
echo ""
echo ""

if [[ "$commitAndPush" == "yes" ]]; then

    echo "------------------------------------------"
    echo "going to look for folders in $WORKING_DIR/$dir"
    echo "------------------------------------------"

    find $WORKING_DIR/$dir -mindepth 1 -maxdepth 1 -type d -print0 |
        while IFS= read -r -d '' line; do

            echo "------------------------------------------"
            echo "$line"  ;
            echo "------------------------------------------"
            cd "$line";
            $SCRIPT_DIR/sslint-gitpush . -m "$message" -c $commitAndPush -n $newTag ;
        done

fi


echo "################################################"
echo "################################################"
echo "################################################"
