{
  "name": "sunnysideup/easy-coding-standards",
  "type": "silverstripe-vendormodule",
  "description": "ECS PHP Linting.",
  "keywords": [
    "Silverstripe-CMS",
    "CMS",
    "Silverstripe",
    "PHP",
    "Linting",
    "linter",
    "clean",
    "easy coding standards",
    "PHP-CS-Fixer",
    "PHP_CodeSniffer",
    "phpstan"
  ],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Nicolaas Francken",
      "email": "modules@sunnysideup.co.nz",
      "role": "lead developer"
    }
  ],
  "require": {
    "phpstan/phpstan": "^0.11",
    "symplify/easy-coding-standard": "^6.1",
    "standard/standard": "*"
  },
  "bin": [
    "bin/sslint-ecs",
    "bin/sslint-stan",
    "bin/sslint-all",
    "bin/sslint-gitpush"
  ],
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "standard/standard",
        "version": "dev-master",
        "type": "package",
        "source": {
          "type": "git",
          "reference": "jsstandard",
          "url": "git@github.com:standard/standard.git"
        }
      }
    }
  ]
}
